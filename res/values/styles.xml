<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Newsonline" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_newsonline</item>
        <item name="android:actionBarTabTextStyle">@style/Newonline.Widget.ActionBar.TabText</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Newsonline</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_cab_done_holo_dark</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Newsonline</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_newsonline</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Newsonline</item>
        
        
    </style>
	<style name="Newonline.Widget.ActionBar.TabText" parent="@android:style/Widget.ActionBar.TabText">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textAllCaps">true</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">15sp</item>	    
	</style>
    <style name="ActionBar.Solid.Newsonline" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_newsonline</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_newsonline</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_newsonline</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Newsonline</item>
    </style>

    <style name="ActionBar.Transparent.Newsonline" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_newsonline</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Newsonline</item>
    </style>

    <style name="PopupMenu.Newsonline" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_newsonline</item>	
    </style>

    <style name="DropDownListView.Newsonline" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_newsonline</item>
    </style>

    <style name="ActionBarTabStyle.Newsonline" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_newsonline</item>
    </style>

    <style name="DropDownNav.Newsonline" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_newsonline</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_newsonline</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_newsonline</item>
    </style>
    
    <style name="ProgressBar.Newsonline" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_newsonline</item>
    </style>
    
    <style name="ActionButton.CloseMode.Newsonline" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_newsonline</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Newsonline.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Newsonline</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Newsonline</item>
    </style>
	
    
</resources>